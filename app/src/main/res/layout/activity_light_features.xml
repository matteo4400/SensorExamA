<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/light_features_text"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="22sp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/lightfeatureslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/light_display_text"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="32dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/displaylightvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textStyle="italic"/>
    <Button
        android:id ="@+id/save_button"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:backgroundTint="@color/navy"
        android:onClick ="BtnSafe"
        android:text ="@string/safe_button_text" />
    <Button
        android:id ="@+id/read_button"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:backgroundTint="@color/navy"
        android:onClick ="BtnRead"
        android:layout_marginBottom="16dp"
        android:text ="@string/read_button_text" />
    <TextView
        android:id="@+id/lightsavedvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic"/>

</LinearLayout>